                            .justify.pt10 当前密码
                        .col10
                            span.mr10.ml10  :
                            input.per80.border-special.pl5.ht30.form-control
                    .row.mt30
                        .col2.offset4
                            .justify.pt10 新密码
                        .col10
                            span.mr10.ml10  :
                            input.per80.border-special.pl5.ht30.form-control
