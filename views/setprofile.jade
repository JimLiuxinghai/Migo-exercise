                    .row.mt30.font14
                        .col2.offset6
                            .justify.pt6 年龄
                        .col8
                            span.mr10  :
                            input.per90.border-special.pl5.ht24.form-control
                    .row.mt30.font14
                        .col2.offset6
                            .justify.pt6 身高
                        .col8
