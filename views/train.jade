extends layout
block content
    .container-fluid
        include nav.jade
        .w19.ml-auto.mr-auto.artical
            .pos-r.overflow-h.ht200
                img(src="/#{plane.trainPic[0].pichref}").per100.blur25
                .pos-a.ht200.per100.bg-rgba6.top0.font-white
                    p.font30.mt30.pl40 #{plane.trainName}
                    .pos-a.bottom0.ht80.overflow-h.pl40
                        .border-l-1.ht80.fl.pl40.pr60
                            p.font16.mt10 #{plane.trainLevel}
                            p.mt20.font-special 难度
                        .border-l-1.ht80.fl.pl40.pr60
                            p.font16.mt10 #{plane.trainEq}
                            p.mt20.font-special 器械
                        .border-l-1.ht80.fl.pl40.pr60
                            p.font16.mt10 #{plane.trainUser.length}人
                            p.mt20.font-special 参加人数
            .mt30.tc.mb100
                .row
                    .col16
                        -for(var i = 0; i < plane.trainPic.length; i ++){
                            div.tl.font16 #{plane.trainPic[i].picDes}
                            div.mt10
                                img(src="/#{plane.trainPic[i].pichref}").per100
                        -}
                    .col8
                        button.btn-huge.btn-info.cursor-p.begin 开始训练
                        button.btn-huge.btn-info.cursor-p.over.display-n 结束训练
                            input(type="hidden" value="#{plane.trainCalorie}")
        include footer.jade

        script(type='text/javascript').
            var trainTime = #{plane.trainTime};
        script(src="/javascripts/plugin/require.js" data-main="/javascripts/plugin/main.js")
        script(src="/javascripts/model/train.js")
